<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="112dp"
        android:background="@drawable/purple_radius" >

        <Button
            android:id="@+id/navi_route_finish_btn"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/msg_finish_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/naviroute_content"
        android:layout_width="600dp"
        android:layout_height="600dp"
        android:layout_marginTop="80dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/relativeLayout2" >
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="200dip" 
        
        android:layout_below="@+id/naviroute_content">

        <Button
            android:id="@+id/short_route_btn"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/short_normal" />

       <Button
           android:id="@+id/avoid_route_btn"
           android:layout_width="200dp"
           android:layout_height="200dp"
           android:layout_alignParentRight="true"
           android:layout_marginRight="50dp"
           android:background="@drawable/avoid_normal" />

       <Button
           android:id="@+id/fast_route_btn"
           android:layout_width="200dp"
           android:layout_height="200dp"
           android:layout_centerHorizontal="true"
           android:background="@drawable/fast_normal" />

    </RelativeLayout>

    <TextView
        android:id="@+id/navi_route_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:text=" " />

</RelativeLayout>