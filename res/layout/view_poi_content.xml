<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/navi_poi_word"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:background="#000"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="40sp" />

    <RelativeLayout
        android:id="@+id/poi_relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:layout_marginTop="125dp"
        android:background="@drawable/main_purple_radius" >

        <FrameLayout
            android:layout_width="120dip"
            android:layout_height="120dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" >

            <Button
                android:id="@+id/poi_middle_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/msg_finish_icon" />
        </FrameLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/poi_search_result_list"
        android:layout_width="500dp"
        android:layout_height="250dp"
        android:layout_below="@+id/poi_relativeLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:scrollbars="none"
        android:divider="@drawable/music_equalizer_bar" >
    </ListView>
    </RelativeLayout>
    