<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#000">
    
    <ImageView
        android:id="@+id/moshen_phone_confirm_profile"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="148dp"
        android:background="@drawable/n10086" />
    
    <TextView 
        android:id="@+id/moshen_phone_confirm_name"
        android:text="10086"
        android:paddingBottom="180dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="#fff"
        android:layout_centerVertical="true"/>
    
    <TextView 
        android:id="@+id/moshen_phone_confirm_hint_text"
        android:text="确认拨打？"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="#fff"
        android:layout_centerVertical="true"/>
    <RelativeLayout 
        android:id="@+id/moshen_phone_confirm_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        >
        <Button 
            android:id="@+id/moshen_phone_confirm_dial_btn"
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:background="@drawable/phone_dial_out_icon"
            />
        <Button 
            android:id="@+id/moshen_phone_dial_cancel_btn"
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:background="@drawable/phone_hang_up_icon"
            android:layout_marginLeft="240dp"/>
        
    </RelativeLayout>
    

</RelativeLayout>